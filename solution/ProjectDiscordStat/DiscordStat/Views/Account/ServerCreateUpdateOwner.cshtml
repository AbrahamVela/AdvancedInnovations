@model DiscordStats.ViewModel.CreateServerVM
<!DOCTYPE html>
<html lang="en">
    <head>
    <title>Server Details</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - DiscordStat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">    
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-host-cloud.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>

</head>
 <body>
          <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>  
    <!-- ***** Preloader End ***** -->
    <!-- Page Content -->
 <!-- Heading Starts Here -->
 <input asp-for="accessCode" id="serverUrl" style="display:none"/>
    <div class="page-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>Your server @Model.name has been created click the button below to claim ownership</h1>
            <button type="button" class="btn btn-primary" onclick="SetOwner()">Next</button>
          </div>
        </div>
      </div>
    </div>
    <!-- Heading Ends Here -->











<script>
    window.onload = function() {
        var a = $('#serverUrl').val();
        var url = "https://www.discord.gg/" + a;
       
       window.open(url, "_blank");
    }
    function SetOwner() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("ServerCreateUpdateOwner", "Account")?ServerId=@Model.Id',
            success: function() {
                window.location.href = '/Account/Details?name=@Model.name';
            }
        });
    }
</script>

</body>
    </html>
    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/owl.js"></script>
    <script src="~/assets/js/accordions.js"></script>