@model DiscordStats.ViewModel.CreateServerVM
<!DOCTYPE html>
<html lang="en">

    <head>
    <title>Account</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - DiscordStat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

    
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">    
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-host-cloud.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>

</head>
  <body>
          <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>  
    <!-- ***** Preloader End ***** -->
        <!-- Page Content -->
    <!-- Heading Starts Here -->
    <div class="page-heading header-text">
      <div class="container">
        <div class="row">
    <div class="col" style="text-align:center">
       <h1>Please use the form below to create your server</h1>
    </div>
          </div>
        </div>
      </div>
    <!-- Heading Ends Here -->

        <!-- Services Starts Here -->
    <div class="services-section services-page" style="text-align: center;">
      <div class="container">
        <div class="row" >
    
<form asp-action="ServerForm"> 
    <div class="row" style="margin-top: -10%">
              <div class="col" style="padding-bottom: 2%">
                <div class="row" style="padding-bottom: 3%" >
                    <div class="col-3">
                        <p style=" color: black; font-weight: 400;font-size:16px">Server Name:</p>
                    </div>
                    <div class="col-6">
                        <input asp-for="name" class="form-control"required="required" maxlength="32"/>
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                </div>

                 <div class="row" style="padding-bottom: 3%">
                    <div class="col-3">
                        <p style="color: black; font-weight: 400;font-size:16px">Region:</p>
                    </div>
                    <div class="col-6">
                        <input asp-for="region" class="form-control"required="required" maxlength="32"/>
                        <span asp-validation-for="region" class="text-danger"></span>
                    </div>
                </div>

                <div class="row" style="padding-top:1%; padding-bottom: 1% ">
                    <div class="col-3">
                        <p style="margin-top: 4%; color: black; font-weight: 400;font-size:16px;white-space:nowrap">Verification Level:</p>
                    </div>
                    <div class="col-6">
                        <input asp-for="verification_level" class="form-control" required="required" min="0" max="4"/>
                        <span asp-validation-for="verification_level" class="text-danger"></span>
                    </div>
                </div>
               </div>

          <div class="col-6" style="margin-top: -1%; padding-bottom: 1%; text-align: left">
                <p style="color: black; font-weight: 400;margin-left:15%; font-size:16px">Verification Levels:</p>

                <li style="margin-left:15%">0 - None</li>
                <li style="margin-left:15%">1 - Low</li>
                <li style="margin-left:15%">2 - Medium</li>
                <li style="margin-left:15%">3 - High</li>
                <li style="margin-left:15%">4 - Highest</li>
        </div>
        </div>
<button value="Submit"  class="btn btn-primary" style="margin-top: 2%;margin-bottom: 2%">Create Server</button>
</form>
          </div>
        </div>
      </div>
   <!-- Services Ends Here -->







</body>



