@model DiscordStats.ViewModel.ServerIdAndGameNameVM

<head>
    <meta name="viewport" content="width=device-width" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
</head>
<body
  class="bg-image"
  style="
    background-image: url('https://static.wixstatic.com/media/f64113_599fc108e7bd4be6beb94829ff078aac~mv2.gif');
  min-height : 100%;
  min-width : 100%;
  background-size:100% 100%;
  background-repeat:no-repeat;
  overflow-y: hidden;
  overflow-x: hidden;
">


@if (Model != null)
{
    <div id="ServerId" value="@Model.ServerId"></div>
    <div id="GameName" value="@Model.GameName"></div>
    <center><h1>@Model.GameName</h1></center>

    <br><center><canvas id="presencesHourlyAllTimeChart" style="color: white; width:100%;max-width:1000px"></canvas></center>
    <br /><div class="dropdown" style="width:50px"><select name="allUsersPresences" id="allUsersPresences">
    <option>All Users</option>
    </select></div>
    <label for="start">Start date:</label>
    <input type="date" id="start" name="startDate" min="2015-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")">
    <label for="start">End date:</label>
    <input type="date" id="end" name="endDate" min="2015-02-01" max="@DateTime.Now.ToString("yyyy-MM-dd")">
}
</body>
@section scripts {
    <script type="text/javascript" src="~/js/site.js"></script>
    <script type="text/javascript" src="~/js/gamestats.js"></script>
}
