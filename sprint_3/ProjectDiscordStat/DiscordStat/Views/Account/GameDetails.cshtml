@model DiscordStats.ViewModel.ServerIdAndGameNameVM

<!DOCTYPE html>
<html lang="en">
    <head>
    <title>Server Details</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - DiscordStat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">    
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-host-cloud.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>

</head>

 <body>
          <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>  
    <!-- ***** Preloader End ***** -->
    <!-- Page Content -->
<!-- Heading Starts Here -->
    <div class="page-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>@Model.GameName's Most Popular Play Time</h1>
          </div>
        </div>
      </div>
    </div>
    <!-- Heading Ends Here -->
     <!-- Services Starts Here -->
    <div class="services-section services-page">
      <div class="container">
        <div class="row" style="margin-bottom:2%">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>Here you'll find when @Model.GameName is most played</h2>
            </div>
          </div>
          @if (Model != null)
{
    <div id="ServerId" value="@Model.ServerId"></div>
    <div id="GameName" value="@Model.GameName"></div>



        
            <div class="col-1" style="width:50px; margin-bottom:1%; left:46%;">
                <select name="allUsersPresences" id="allUsersPresences">
                    <option>All Users</option>
                </select>
            </div>

                <div class="row justify-content-center">
                        <div class="col-3"  style="margin-left:29%">
                            <label for="start">Start date:</label>                 
                        </div>
                        <div class="col-3" style="left:-10%" >
                            <label for="start">End date:</label>       
                        </div>
                </div>
                <div class="row justify-content-center">
                        <div class="col-3" style="margin-left:15%">          
                            <input type="date" id="start" name="startDate" min="2015-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-3" style="margin-left:-9%">
                              <input type="date" id="end" name="endDate" min="2015-02-01" max="@DateTime.Now.ToString("yyyy-MM-dd")">

                        </div>
                </div>
                <br />

    <br><center><canvas id="presencesHourlyAllTimeChart" style="color: white; width:100%;max-width:1000px"></canvas></center>
      <div class="row" style="margin-top:2%; text-align:right">
        <div class="col">
        <h5 id="gameDetialsDownloadArea">Download Most Popular Play Time Data:</h5>

        <button id="exportJsonMostPopularPlayTime" type="button" class="btn btn-primary" onclick="GetMostPopularPlayTime(0)" >Json</button>

        <button id="exportCsvMostPopularPlayTime" type="button" class="btn btn-primary" onclick="GetMostPopularPlayTime(1)" >CSV</button>                   
        </div>
    </div>

    


}



        </div>
      </div>
    </div>
    <!-- Services Ends Here -->

</body>
    </html>
    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/owl.js"></script>
    <script src="~/assets/js/accordions.js"></script>
@section scripts {
    <script type="text/javascript" src="~/js/site.js"></script>
    <script type="text/javascript" src="~/js/gamestats.js"></script>
}
