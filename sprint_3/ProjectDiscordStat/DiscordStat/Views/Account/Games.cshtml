@model List<DiscordStats.ViewModel.GamesVM>

    <style>
.zoom {
  transition: transform .7s; /* Animation */
  min-width: 125px;
  min-height: 125px;
  margin: 0 auto;
}
.zoom:hover {
  transform: scale(1.3); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
  filter: brightness(1.15);
}
</style> 


<body
  class="bg-image"
  style="
    background-image: url('https://static.wixstatic.com/media/f64113_599fc108e7bd4be6beb94829ff078aac~mv2.gif');
  min-height : 100%;
  min-width : 100%;
  background-size:100% 100%;
  background-repeat:no-repeat;
  overflow-y: hidden;
  overflow-x: hidden;
">

 <ul class="list-group">
     @foreach (var u in @Model)
        {
            <div class=row style="margin-bottom: 5%; margin-left:6%">
            <div class="col-4">
                    @{
                        var i = u.GameImage;
                        if(u.name == "Spotify")
                        {
                            i = "https://upload.wikimedia.org/wikipedia/commons/thumb/1/19/Spotify_logo_without_text.svg/800px-Spotify_logo_without_text.svg.png";
                        }
                        if(u.GameImage == null)
                        {
                            i = "https://cdn.discordapp.com/app-icons/" + u.id + "/" + u.icon + ".png";
                        }
                                           
            <img class="zoom" src="@i" id="@u.name" onclick="location.href='@Url.Action("GameDetails", "Account", new { gameName = u.name, serverId = u.ServerId })'" style="height: 125px;"/>
                }
                </div>
                <div class="col-3">
                <h3 style="color: whitesmoke">@u.name</h3>
                </div>
                <div class="col-3">
                <h3 style="color: whitesmoke">@u.UserCount player(s)</h3>
                </div>
                </div>
        }
        
</ul>
</body>

