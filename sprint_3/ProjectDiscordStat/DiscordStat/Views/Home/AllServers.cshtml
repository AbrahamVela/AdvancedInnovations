@model IEnumerable<DiscordStats.ViewModels.ServerOwnerViewModel>;
@*@using DiscordStats.DAL.Concrete. check this from class example repo*@
<!DOCTYPE html>
<html lang="en">

    <head>
    <title>Account</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - DiscordStat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

    
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">    
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-host-cloud.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>

</head>
<body>
    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>  
    <!-- ***** Preloader End ***** -->
    <!-- Heading Starts Here -->
    <div class="page-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>All Servers</h1>
             <p><span>Click on a server to become a memeber.</span></p>
          </div>
        </div>
      </div>
    </div>
    <!-- Heading Ends Here -->
    <!-- Services Starts Here -->
    
      <div class="container" style="text-align:center">
        <div class="row" style="padding:5%">

            <form asp-controller="Home" asp-action="AddMemberToPickedServer" method="post">
           <table class="table">
              <thead class="thead-dark">
            <tr>
                <th><b>Member Count</b></th>
                <th><b>Server Name</b></th>
                <th class="w-25">Most Played Game</th>
                <th></th>
            </tr>

            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td style="padding-bottom: 2%">@s.Approximate_Member_Count</td>
                        <td style="padding-bottom: 2%">@s.Name</td>            
                        <td style="padding-bottom: 2%">
                            @if (s.presence != null)
                            {
                                @s.presence.Name
                            }
                            else
                            {
                                <p>None Available</p>
                            }
                                
                            </td>
                        <td style="padding-bottom: 2%"><button class="btn btn-primary" name="id" value="@s.Id">Join</button></td>
                    </tr>
                }
            </tbody>
        </table>
     </form>




        </div>

    </div>
    <!-- Services Ends Here -->

    </body>
    </html>



<!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/owl.js"></script>
    <script src="~/assets/js/accordions.js"></script>
