@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
</head>

<div class="mode">
    <div onclick="false" class="change"></div>
@*    <span onclick="true" class="change"> hello </span>*@
</div>

<body>
<div class="col">
    <div class="row">
        <div class="text-center">
            <h1>Welcome</h1>
            <h3><center>This app is the ultimate location to see discord server and game activity. It's as easy as "up down A B up down start" to log in.</center></h3><br />
            <h3><center>Making graphs and charts cool through displaying top games and server activities. Also giving new insight on users by displaying them in orderly tables. Enough blabbing, click "Login" and begin an adventure of a lifetime! </center></h3>
        </div>
    </div>
    <div class="row">
        <div class="col" >
            <center><canvas id="barChart" style="width:100%;max-width:700px"></canvas></center>
        </div>
        <div class="col">
            <center><canvas id="pieChart" style="width:100%;max-width:700px"></canvas></center>
        </div>
    </div>
</div>


<script>
var xValues = ["1", "2", "3", "4", "5"];
var yValues = [62, 49, 23, 70, 32];
var barColors = ["red", "green","blue","orange","brown"];

new Chart("barChart", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "Users per Servers",
    }
    
  }
})

var xValues = ["COD", "FortNite", "VisualStudio", "Spotify", "Roblox"];
var yValues = [24, 49, 57, 24, 32];
var barColors = ["red", "green","blue","orange","brown"];

new Chart("pieChart", {
  type: "pie",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "Users Playing top 5 games",
    }
    
  }
});
	
</script>
</body>
</html>