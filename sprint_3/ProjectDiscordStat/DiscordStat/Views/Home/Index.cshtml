@model IEnumerable<DiscordStats.Models.Server>

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>

<html lang="en">


  <body>
     <div class="banner">
      <div class="container">
        <div class="row">
          <div class="col-md-8 offset-md-2">
            <div class="header-text caption">
              <h2 id="displayMessage">Welcome</h2>                    
            </div>
          </div>
          <div class="header-text caption">
            <h3 style="color:whitesmoke">Stat Tracker is the ultimate Discord management tool that allows server admins and users to view statistics, manage users, and so much more.    </h3>
          </div>            
        </div>
      </div>
    </div>
    <!-- Banner Ends Here -->


    <!-- Services Starts Here -->
    <div class="services-section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">              
              <h2>Services we provide</h2>              
            </div>
          </div>
          <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="service-item">
              <i class="fa fa-gamepad"></i>
              <h4>Game Tracking</h4>
              <p>Track what games are being played in your server, how many user have played them, and the most popular time for them to be played.</p>
            </div>
          </div>
          <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="service-item">
              <i class="fa fa-users"></i>
              <h4>User management</h4>
              <p>Our server details page allows the owners of servers to view members, manage users, and monitor their activity.</p>
            </div>
          </div>
          <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="service-item">
              <i class="fa fa-comment"></i>
              <h4>Become Connected</h4>
              <p>Users can visit the All Servers page to search for new communities they want to join, or make a post to our forum to find new friends. </p>
            </div>
          </div>
        </div>

        <div class="row">
        <div class="col-7">
            <canvas id="barChart" style="width:100%;max-width:700px"></canvas>
       </div>
        <div class="col-5">   
            <canvas id="pieChart" style="width:100%;max-width:700px"></canvas>
        </div>
        </div>
        <div class="row">
            <h3><center>Featured Server:</center></h3><br />
            <h1 style="color:blue">
                @foreach (var item in Model)
                {
                    if(item.InLottery == "trueWinner")
                    {
                        <center>@item.Name</center>
                    }
                }
            </h1>
        </div>
      </div>      
    </div>
    <!-- Services Ends Here -->


    <!-- Graphs Starts Here -->
    <div class="pricing-section">

      <div class="container">
        <div class="row">
          <div class="col-md-8 offset-md-2">
          </div>
        </div>
      </div>
      
    </div>
    <!-- Graphs Ends Here -->

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="assets/js/custom.js"></script>
    <script src="assets/js/owl.js"></script>
    <script src="assets/js/accordions.js"></script>

    <script type="text/javascript" src="~/js/site.js"></script>
    <script language = "text/Javascript"> 
      cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
      function clearField(t){                   //declaring the array outside of the
      if(! cleared[t.id]){                      // function makes it static and global
          cleared[t.id] = 1;  // you could use true and false, but that's more typing
          t.value='';         // with more chance of typos
          t.style.color='#fff';
          }
      }
    </script>

  </body>
</html>
