@model IEnumerable<Server>


<div class="mode">
Dark mode:	
    <span class="change">ON</span>
</div>

<div class = "row">
    <ul>
        <li><h3>
            <u>Verification Level:</u> It's a form of security for messaging in text channels, users within the server have to 
            meet a certain level of security to message, disregarding members that have assigned roles.
        </h3></li>
        <li><h3>
            <u>Premuim Tier:</u> Seems to be perks for a server. eg: boosts, monetize servers, and the likes. 
        </h3></li>
        <li><h3>
            <u>App Presence #:</u> Is the "Approximate Presence Count". Which includes (and perhaps not limited to) 
            "Playing"/"Streaming"/"Watching"/"Competing"; Custom Status; User Status: online, idle, dnd, or offline.
        </h3></li>
        <li><h3>
            <u>Message:</u> Message is from the owner of the server to you.
        </h3></li>
    </ul>
</div>
<div class = "row">
    <table id="filterTable" class="display" style="color:white">

            <tr>
                <th>Server Name</th>
                <th>Verification Level</th>
                <th>Premium Tier</th>
                <th>App Presence #</th>
                <th>Message</th>
            </tr>

            @foreach(var s in Model.OrderByDescending(s => s.ApproximatePresenceCount).ToList())
            {
	            @if(s.OnForum == "true")
	            {
		            <tr>
                        <td>@s.Name</td>
                        <td>@s.VerificationLevel</td>
                        <td>@s.PremiumTier</td>
                        <td>@s.ApproximatePresenceCount</td>
                        <td>@s.Message</td>
		            </tr>
	            }
            }
    </table>
</div>

<div class="col">
    <div class="form-group mt-3 text-center">
        <input type="button" value="Return to Prior Page" style="background:black; color:white" onclick="location.href='@Url.Action("Forum","Forum")'" />
    </div>
</div>


@section Scripts {

     <script type="text/javascript" src="~/js/site.js"></script>
}