@model IEnumerable<DiscordStats.ViewModel.WebhookUsageVM>

<div class="mode">
Dark mode:    
    <span class="change">ON</span>
</div>


@if(Model.Count() != 0)
{
	<h1 style="text-align:center">Click on webhook to send message.</h1>
	<div class="row">
		<div class="col">
			<table>
				@foreach(var w in Model)
				{
					<tr>
						<td>
							 <h3><a href="@Url.Action("WebhookMessage", "Channel", new {Name = w.name, Id = w.Id, Token = w.Token, guild_id = w.guild_id, channel_id = w.channel_id})"> @w.name</a></h3>  
						</td>
						<td>
							 <input type="button" class="btn btn-danger" value="Delete Webhook" onclick="location.href='@Url.Action("DeleteWebhook", "Channel", new {Id = w.Id, channel_id= w.channel_id})'"/>
						</td>
					 </tr>

				}
			</table>
		</div>
		<div class="col">
			<input type="button" class="btn btn-primary" value="New Webhook" onclick="location.href='@Url.Action("WebhookForm", "Channel", new {channelId = ViewBag.channel_id})'"/>
		</div>
	</div>
}
else
{
	<input type="button" class="btn btn-primary" value="New Webhook" onclick="location.href='@Url.Action("WebhookForm", "Channel", new {channelId = ViewBag.channel_id})'"/>


}

@section Scripts {

     <script type="text/javascript" src="~/js/site.js"></script>
}